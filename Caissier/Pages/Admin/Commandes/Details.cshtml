@page
@model ProjetASI.Pages.Admin.Commandes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Commande</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.table)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.table.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.datecomm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.datecomm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.serveur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.serveur.nom)
        </dd>
        <dt class="col-sm-2">
            Etat de paiement: 
        </dt>
        
            @if(Model.Commande.isPaid==true)
            {
                <dd class="col-sm-10">
                    Payée
                    </dd>
            }
            else
            {
            <dd class="col-sm-10">
                En attente de paiement
            </dd>
            }
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.prix)
        </dd>
    </dl>
    Articles:
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Quantité Commandée</th>
                <th>Prix par article</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var art in Model.Commande.Articles)
            {
                <tr>
                    <td>@Html.DisplayFor(model => art.article.nom)</td>
                    <td>@Html.DisplayFor(model => art.quantite)</td>
                    <td>@Html.DisplayFor(model => art.prix)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    
    <a asp-page="./Index">Back to List</a>
</div>
