@page
@model ProjetASI.Pages.Barman.IndexModel
@{
    ViewData["Title"] = "Commandes";
}

<div class="d-flex">
    <h1>Commandes</h1>
</div>
<br />
<form class="form-group" method="post">
    <div id="div-commandes" class="row" class="card-body overflow-auto" style="height:200px">
    @foreach (var commande in @Model.commandes)
    {
        <div class="col-md-4" style="width: 18rem;">
            <h5 class="card-header">
                Commande N° @commande.ID
            </h5>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Article</th>
                            <th>Quantité</th>
                        </tr>
                    </thead>
                    @foreach (var Article in commande.Articles)
                    {
                        <tr>
                            <td>@Article.article.nom</td>
                            <td>@Article.quantite</td>
                        </tr>
                    }
                </table>
            </div>

            <div class="p-2 ms-auto">
                @if ((bool)@commande.commencer)
                {
                    <input type="submit" class="btn btn-primary" value="Valider" asp-route-id="@commande.ID" />
                }
                else
                {
                    <input type="submit" class="btn btn-primary"  value="Commencer la preparation" asp-route-id="@commande.ID" />
                }
            </div>

        </div>
    }
</div>
</form>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/commandeHub")
        .build();

    connection.start().then(function () {
        console.log("La connexion à SignalR est établie!");
    }).catch(function (err) {
        console.error(err.toString());
    });
    connection.on("RecevoirCommande", function() {
        location.reload();
    });


</script>
